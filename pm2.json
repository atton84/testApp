{
	"apps" : [
		{
			"name"        : "testApp",            // Имя приложения (id) в pm2
			"script"      : "app.js", // Скрипт сервера
			"watch"       : true,                      // Отслеживать изменения приложения и перезагружать его
			"node_args"   : "",                         // Параметры ноды при запуске скрипта
			"exec_mode"   : "cluster_mode",             // Используем кластер, чтобы расперделить равномерно нагрузку по серверу
			"instances"   : 1,                          // Количество запущеных экземпляров приложения в режиме кластера
			"max_memory_restart": "200M",               // Перезапускаем приложения, если оно привысила лимит по памяти
			"autorestart" : true,                       // Если приложение упало, pm2 перезапустит его автоматически
			"env": {
				"NODE_ENV": "production",               // Запускаем приложения, как Production
				"args": ["--ignore-watch=public|node_modules"]
			}
		}
	]
}
